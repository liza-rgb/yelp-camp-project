<% layout('layouts/boilerplate') %>

<div class="row mb-3">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input type="text" class="form-control" id="title" name="campground[title]" required>
                <div class="invalid-feedback">
                    Please provide a valid title.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input type="text" class="form-control" id="location" name="campground[location]" required>
                <div class="invalid-feedback">
                    Please provide a valid location.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input type="text" class="form-control" id="image" name="campground[image]" required>
                <div class="invalid-feedback">
                    Please provide a valid image URL.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" name="campground[price]" id="price" placeholder="0.00"
                        aria-describedby="price-label" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" id="description" name="campground[description]" required></textarea>
                <div class="invalid-feedback">
                    Please provide a short info.
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Save</button>
            </div>
        </form>
        <a href="/campgrounds">Cancel</a>
    </div>
</div>